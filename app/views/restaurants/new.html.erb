<div class="container">
  <h1>New Restaurant</h1>
</div>
<div class="container">
  <div class="row">
    <div class="column">
      <%= simple_form_for( @restaurant ) do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORIES %> 
        <br>
        <br>
        <%= f.submit class: "btn btn-outline-primary" %>
      <% end %>
      </div>
   </div>
</div>